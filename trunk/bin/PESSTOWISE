    else:
        _reducer0 = _reducer
    for image in lista:
        hdr = ntt.util.readhdr(image)
        imageasci = re.sub('.fits', '.asci', image)
        lam, fl = ntt.util.readspectrum(image)
        f = open(imageasci, 'w')
        for i in range(0, len(lam)):
            f.write('%10s\t%10s\n' % (lam[i], fl[i]))
        f.close()

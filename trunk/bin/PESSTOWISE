                object2 = 'NULL'

            line = '%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t' \
                '%s\t%s\t%s\t%s\t%s\n' % \
                (_object, imageasci, image, _date, _UT, _instrume, _observer, str(int(_exptime)), str(_slit),
